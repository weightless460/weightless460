
.item{
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-left: 40rpx;
	margin-right: 40rpx;
	height: 45%;
}
.item image{
	width: 40rpx;
	height: 40rpx;
}
.input_temp{
	background-color: white;
	height: 130rpx;
	width: 720rpx;
	margin-top: 20rpx;
	border-radius: 20rpx;
}
.input_temp input{
	margin-left: 40rpx;
	height: 55%;
	
	font-style: normal;
	font-weight: bold;
	font-size: 30rpx;
	line-height: 38rpx;
	/* identical to box height */
	
	letter-spacing: -0.3px;
	
	color: #3C3C3C;
}
.item_name{
	display: flex;
	flex-direction: column;
	justify-content: center;
}
.item_name text{
	font-style: normal;
	font-weight: bold;
	font-size: 24rpx;
	line-height: 30rpx;
	text-align: center;
	letter-spacing: -0.6rpx;
	
	color: #000000;
}
.divider1{
	border: 2rpx solid #000000;
}
.divider2{
	border: 2rpx solid #000000;
	width: 70rpx;
}

