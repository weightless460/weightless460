
page{
		background-color: #f6f9fc;
}
.remind{
		position: fixed;
		bottom: 120rpx;
		font-style: normal;
		font-weight: 800;
		font-size: 28rpx;
		line-height: 40rpx;
		color: #000000;
}
.grad{
		position: fixed;
		bottom: 110rpx;
		height: 80rpx;
		width: 100%;
}
.optional_num{
		position: relative;
		top: 20rpx;
		margin-left: 280rpx;
		
		font-style: normal;
		font-weight: bold;
		font-size: 24rpx;
		line-height: 28rpx;
		

		color: #000000;
}
.selected_num{
		position: relative;
		top: 20rpx;
		margin-left: 150rpx;
		font-style: normal;
		font-weight: bold;
		font-size: 36rpx;
		line-height: 46rpx;
		/* identical to box height */
		
		color: #000000;
}
.good{
	width: 680rpx;
	height: 170rpx;
	background-color: white;
	border-radius: 20rpx;
	display: flex;
	align-items: center;
	margin-top: 30rpx;
}
.good_img{
	width: 95rpx;
	height: 95rpx;
	border-radius: 50rpx;
	background-color: #007AFF;
}
.img_bcg{
	position: relative;
	left: 25rpx;
	display: flex;
	 justify-content: center; align-items: center; 
	 background-color: #7cc7d0; width: 110rpx; height: 110rpx;
	  border-radius: 30rpx;
}
.good_introduction{
	font-style: normal;
	font-weight: bold;
	font-size: 28rpx;
	line-height: 36rpx;
	
	color: #000000;
	margin-left: 40rpx;
}
.good_name{
	font-style: normal;
	font-weight: bold;
	font-size: 28rpx;
	line-height: 36rpx;	
	color: #000000;
	position: absolute;
	right: 60rpx;
}
.nutrition_value{
		display: flex;
		flex-direction: column;
		margin-right: 30rpx;
}
.nutrition_value_text{
		font-style: normal;
		font-weight: bold;
		font-size: 20rpx;
		line-height: 26rpx;
		/* identical to box height */
		position: relative;
		left: 10rpx;
		letter-spacing: 20rpx;
		
		color: #979797;
}
.nutrition_item{
		display: flex;
}
.nutrition_item image{
		width: 34rpx;
		height: 34rpx;
}
.nutrition_item text{
		font-style: normal;
		font-weight: normal;
		font-size: 28rpx;
		line-height: 36rpx;
		color: #000000;
}
.nutrition_title{
		font-style: normal;
		font-weight: bold;
		font-size: 28rpx;
		line-height: 36rpx;
		color: #000000;
		position: relative;
		right: 200rpx;
}
.nutrition_table{
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		width: 690rpx;
		height: 140rpx;
		border-radius: 20rpx;
		background-color: white;
		margin-top: 40rpx;
}


